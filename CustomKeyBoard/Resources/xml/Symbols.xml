    <!--number row end-->
  </Row>
  <!--first row start-->
   <Row>
    <Key android:codes="43" android:keyLabel="+" android:keyEdgeFlags="left"/>
    <Key android:codes="0215" android:keyLabel="×" />
    <Key android:codes="0247" android:keyLabel="÷" />
    <Key android:codes="61" android:keyLabel="=" />
    <Key android:codes="96" android:keyLabel="/" />
    <Key android:codes="95" android:keyLabel="_" />
    <Key android:codes="163" android:keyLabel="€" />
