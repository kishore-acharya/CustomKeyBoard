<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
      <item name="android:windowLightNavigationBar">true</item>
      <item name="android:navigationBarColor">@color/keyboard_background_color</item>
    </style>
  <style name="Widget.Material.ActionButton" parent="Theme.AppCompat.Light">
    <item name="background">?attr/actionBarItemBackground</item>
    <item name="paddingStart">12dp</item>
    <item name="paddingEnd">12dp</item>
    <item name
    ="android:layout_width">@dimen/action_button_min_width_material</item>
    <item name
    ="android:layout_height">@dimen/action_button_min_height_material</item>
 
  </style>

</resources>
