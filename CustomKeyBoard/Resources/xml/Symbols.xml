    <Key android:codes="165" android:keyLabel="¥" />
    <Key android:codes="8377" android:keyLabel="₹" android:keyEdgeFlags="right"/>
  </Row>
  
  <!--second row start-->
  
   <Row   >
    <Key android:codes="33" android:keyLabel="!" android:keyEdgeFlags="left"/>
    <Key android:codes="64" android:keyLabel="\@" />
    <Key android:codes="35" android:keyLabel="#" />
    <Key android:codes="36" android:keyLabel="$" />
    <Key android:codes="8274" android:keyLabel="%" />
    <Key android:codes="94" android:keyLabel="^" />
    <Key android:codes="38" android:keyLabel="&amp;" />
    <Key android:codes="42" android:keyLabel="*" />
    <Key android:codes="40" android:keyLabel="(" />
    <Key android:codes="41" android:keyLabel=")" android:keyEdgeFlags="right"/>
  </Row>
  <!--second row end-->
  
  
  <!--third row start-->
  <Row>

    <Key android:codes="115"
         android:keyEdgeFlags="left"
         android:keyIcon="@drawable/caps_off"
        
         android:keyWidth="13%p"
         />

    <Key android:codes="45" android:keyLabel="-" android:horizontalGap="2%p"/>
    <Key android:codes="39" android:keyLabel="'" />
    <Key android:codes="34" android:keyLabel="“" />
    <Key android:codes="58" android:keyLabel=":" />
    <Key android:codes="59" android:keyLabel=";" />
    <Key android:codes="44" android:keyLabel="," />
    <Key android:codes="63" android:keyLabel="\?" />
    <Key android:codes="67"
          android:keyWidth="13%p"
          android:isRepeatable="true"  android:keyEdgeFlags="right"
          android:keyIcon="@drawable/del"
         />
    <!--Delte Key-->

  </Row>
  <!--third row end-->
  
  
  <Row   android:keyHeight="@dimen/function_key_height">

    <Key android:codes="@integer/code_symbols" android:keyLabel="!#1" android:keyEdgeFlags="left"/>
    <!--symbol key-->
    <Key android:codes="44" android:keyLabel=","/>


    <Key android:codes="32" android:keyLabel="   "
         android:keyWidth="39%p" />
    <!--!space key-->

    <Key android:codes="46" android:keyLabel="." />

    <Key android:codes="10"
         android:keyLabel="Done"
         android:keyWidth="26%p"
         android:isModifier="true"
         android:keyEdgeFlags="right"
        
         />
    <!--!Enter Key- confusion here about the code-->
  </Row>

  <Row android:keyHeight="1dp" android:verticalGap="4dp"/>
  <!--for blank row below-->

</Keyboard>