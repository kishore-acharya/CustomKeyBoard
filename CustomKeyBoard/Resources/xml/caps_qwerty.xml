<?xml version="1.0" encoding="utf-8" ?>
<Keyboard
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:keyWidth="8%p"
  android:keyHeight="45dp"
  android:verticalGap="9dp"
  android:horizontalGap="2%p">
  
  <!--for blank row above-->
  <Row  android:keyHeight="30dp" >
    <Key android:codes="@integer/code_1" android:keyLabel="1" android:keyEdgeFlags="left" />
    <Key android:codes="50" android:keyLabel="2"/>
    <Key android:codes="51" android:keyLabel="3"/>
    <Key android:codes="52" android:keyLabel="4"/>
    <Key android:codes="53" android:keyLabel="5"/>
    <Key android:codes="54" android:keyLabel="6"/>
    <Key android:codes="55" android:keyLabel="7"/>
    <Key android:codes="56" android:keyLabel="8"/>
    <Key android:codes="57" android:keyLabel="9"/>
    <Key android:codes="48" android:keyLabel="0" android:keyEdgeFlags="right"/>
  </Row>

  <Row>
    <Key android:codes="81" android:keyLabel="Q" android:keyEdgeFlags="left"/>
    <Key android:codes="87" android:keyLabel="W" />
    <Key android:codes="69" android:keyLabel="E" />
    <Key android:codes="82" android:keyLabel="R" />
    <Key android:codes="84" android:keyLabel="T" />
    <Key android:codes="89" android:keyLabel="Y" />
    <Key android:codes="85" android:keyLabel="U" />
    <Key android:codes="73" android:keyLabel="I" />
    <Key android:codes="79" android:keyLabel="O" />
    <Key android:codes="80" android:keyLabel="P" android:keyEdgeFlags="right"/>
  </Row>
  <Row  >
    <Key android:codes="65" android:keyLabel="A" android:keyEdgeFlags="left" android:horizontalGap="6%p"/>
    <Key android:codes="83" android:keyLabel="S" />
    <Key android:codes="68" android:keyLabel="D" />
    <Key android:codes="70" android:keyLabel="F" />
    <Key android:codes="71" android:keyLabel="G" />
    <Key android:codes="72" android:keyLabel="H" />
    <Key android:codes="74" android:keyLabel="J" />
    <Key android:codes="75" android:keyLabel="K" />
    <Key android:codes="76" android:keyLabel="L" android:keyEdgeFlags="right"/>

  </Row>
  <Row>

    <Key android:codes="115"  
           android:keyEdgeFlags="left" 
           android:keyWidth="13%p" 
           
           android:keyIcon="@drawable/caps_on"
          />
    <!--!caps lock key handel in code-->
    <Key android:codes="90" android:keyLabel="Z" android:horizontalGap="2%p"/>
    <Key android:codes="88" android:keyLabel="X" />
    <Key android:codes="31" android:keyLabel="C" />
    <Key android:codes="86" android:keyLabel="V" />
    <Key android:codes="66" android:keyLabel="B" />
    <Key android:codes="78" android:keyLabel="N" />
    <Key android:codes="77" android:keyLabel="M" />

    <Key android:codes="67" 
         android:keyEdgeFlags="right"  android:keyWidth="13%p"
         android:isRepeatable="true"
         android:isModifier="true"
         android:keyIcon="@drawable/del"
         />
    <!--Delte Key-->

  </Row>
  <Row   android:keyHeight="@dimen/function_key_height">

    <Key android:codes="@integer/code_symbols" android:keyLabel="!#1" android:keyEdgeFlags="left"/> <!--symbol key-->

    <Key android:codes="44" android:keyLabel=","/>

    <Key android:codes="32" android:keyLabel="   "
         android:keyWidth="39%p" />
    <!--!space key-->

    <Key android:codes="46" android:keyLabel="." />

    <Key android:codes="10"
         android:keyLabel="Done"
         android:keyWidth="26%p"
         android:isModifier="true"
         android:keyEdgeFlags="right"/>
    <!--!Enter Key- confusion here about the code-->
  </Row>
  <Row android:keyHeight="1dp" android:verticalGap="4dp"/>




</Keyboard>